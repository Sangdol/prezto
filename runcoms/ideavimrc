let mapleader="\<Space>"

vnoremap <Space>p "0p
nnoremap <silent> zj o<Esc>
nnoremap <silent> zk O<Esc>
nnoremap <silent> zh i<Space><Right><Esc>
nnoremap <silent> zl a<Space><Left><Esc>
inoremap jk <Esc>
set incsearch
set clipboard=unnamed
